{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "RpaAdvancedTable.Api": "Debug"
    }
  },
  "AllowedHosts": "*",

  // Serilog File Logging Configuration
  "Serilog": {
    "LogFilePath": "logs/rpa-advanced-table.log",
    "RollingInterval": "Day",
    "RetainedFileCountLimit": 30,
    "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} - {Message:lj}{NewLine}{Exception}"
  },

  // Keycloak Configuration (Disabled - ready to enable when needed)
  // To enable: Uncomment this section and update the values
  // Then uncomment the authentication code in Program.cs
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/YOUR_REALM_NAME",
    "Audience": "account",
    "ClientId": "rpa-advanced-table",
    "ClientSecret": "YOUR_CLIENT_SECRET",
    "RequireHttpsMetadata": false,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true
  },

  // CORS Configuration
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "https://localhost:5173"
    ]
  },

  // SignalR Configuration
  "SignalR": {
    "EnableDetailedErrors": true,
    "MaximumReceiveMessageSize": 1048576
  },

  // Grid Configuration
  "Grid": {
    "DefaultPageSize": 100,
    "MaxPageSize": 1000,
    "EnableValidation": true,
    "EnableAutoSave": false,
    "AutoSaveIntervalSeconds": 30
  }
}
